@{
    ViewBag.Title = "JsonParse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    @using (Html.BeginForm("JsonParse", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-inline", role = "form" }))
    {
        <div class="col-md-offset-2 col-md-4">
            <input type="file" name="file"/>
        </div>
        <div class="col-md-4">
            <input type="submit" value="JSON" class="btn btn-default" />
        </div>
    }
</div>

@Scripts.Render("~/Content/DataTasks.json")